#include <iostream>
using namespace std;

int suma_arreglo(int arr[], int size) {
    if (size == 0) {
        return 0;
    }
    else {
        return arr[size-1] + suma_arreglo(arr, size-1);
    }
}

int main() {
    int nums[] = { 2, 5, 6, 8, 9, 10 };
    int n = 6;
    int suma = suma_arreglo(nums,n);
    cout << "La suma del arreglo es: " << suma << endl;
    return 0;
}
