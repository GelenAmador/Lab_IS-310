#include <iostream>
#include <stack>

int main() {
    std::stack<int> pila;

    // Agregar elementos a la pila
    pila.push(10);
    pila.push(20);
    pila.push(30);

    // Obtener el tamaño de la pila
    std::cout << "Tamanio de la pila: " << pila.size() << std::endl;

    // Obtener el elemento superior de la pila
    std::cout << "Elemento superior: " << pila.top() << std::endl;

    // Eliminar el elemento superior de la pila
    pila.pop();

    // Obtener el elemento superior de la pila nuevamente
    std::cout << "Nuevo elemento superior: " << pila.top() << std::endl;

    // Verificar si la pila está vacía
    if (pila.empty()) {
        std::cout << "La pila esta vacia" << std::endl;
    } else {
        std::cout << "La pila no esta vacia" << std::endl;
    }

    return 0;
}
